@model _027_WebAppMvcRazor.Models.Product

@{
    ViewBag.Title = "DemoExpression";
    Layout = "~/Views/_BasicLayout.cshtml";
}

<table>
    <thead>
        <tr>
            <th>
                Property
            </th>
            <th>
                Value
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                Name
            </td>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <td>
                Price
            </td>
            <td>
                @Model.Price
            </td>
        </tr>
        <tr>
            <td>
                Count
            </td>
            <td>
                @ViewBag.ProductCount
            </td>
        </tr>
        <tr>
            <td>Stock Warning</td>
            <td>
                @switch ((int)ViewBag.ProductCount)
                {
                    case 0:
                        @:Out of Stock
                        break;
                    case 1:
                        @:Low Stock (@ViewBag.ProductCount)
                        break;
                    default:
                        @ViewBag.ProductCount
                        break;
                }
            </td>
        </tr>
        <tr>
            <td>Stock Level</td>
            <td>
                @if (ViewBag.ProductCount == 0)
                {
                    @:Out of Stock
                }
                else if (ViewBag.ProductCount == 1)
                {
                    <b>Low Stock (@ViewBag.ProductCount)</b>
                }
                else
                {
                    @ViewBag.ProductCount
                }
            </td>
        </tr>
    </tbody>
</table>

<div data-discount="@ViewBag.ApplyDiscount"
     data-express="@ViewBag.ExpressShip"
     data-supplier="@ViewBag.Supplier">
    The containing element has data attributes.
</div>

Discount:
<input type="checkbox" checked="@ViewBag.ApplyDiscount" />
Express:
<input type="checkbox" checked="@ViewBag.ExpressShip" />
Supplier:
<input type="checkbox" checked="@ViewBag.Supplier" />
